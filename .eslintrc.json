{
    "extends": "airbnb",
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "import"],
    "env": {
        "browser": true,
        "es2020": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    },
    "rules": {
      "max-len": [2, 120],
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "@typescript-eslint/no-unused-vars": 2,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
      "import/no-unresolved": "error"
    }
} 
<div class="profile-page__container">
    <div class="profile-page__header">
            {{> Avatar url="" }}
            <div class="profile-page__username">Виктория</div>
        </div>
        <div class="profile-page__content">
            {{> InputField class="profile-page__input" id="profile-page_email" title="Почта" name="email" type="email" }}
            {{> InputField class="profile-page__input" id="profile-page_login" title="Логин" name="login" }}
            {{> InputField class="profile-page__input" id="profile-page_first_name" title="Имя" name="first_name" }}
            {{> InputField class="profile-page__input" id="profile-page_second_name" title="Фамилия" name="second_name" }}
            {{> InputField class="profile-page__input" id="profile-page_display_name" title="Имя в чате" name="display_name" }}
            {{> InputField class="profile-page__input" id="profile-page_phone" title="Телефон" name="phone" type="tel" }}
        </div>
        <div class="profile-page__footer">
            {{> Link class="profile-page__link" id="change_profile_link" value="Изменить данные" page="/edit-profile" }}
            {{> Link class="profile-page__link" id="change_password_link" value="Изменить пароль" page="/change-password" }}
            {{> Link class="profile-page__link" id="log_out_link" value="Выйти" page="/login" }}
            {{> Link class="profile-page__link" value="Назад к чатам" page="/chats" }}
        </div>
</div>
<section class="edit-profile-page">
    <form class="edit-profile-page__form">
        <div class="edit-profile-page__container">
            <div class="edit-profile-page__header">
                {{> Avatar avatar_url="" }}
            </div>
            <div class="profile-page__content">
                {{> InputField class="edit-profile-page__input" id="edit-profile-page_email" title="Почта" name="email" type="email" }}
                {{> InputField class="edit-profile-page__input" id="edit-profile-page_login" title="Логин" name="login" }}
                {{> InputField class="edit-profile-page__input" id="edit-profile-page_first_name" title="Имя" name="first_name" }}
                {{> InputField class="edit-profile-page__input" id="edit-profile-page_second_name" title="Фамилия" name="second_name" }}
                {{> InputField class="edit-profile-page__input" id="edit-profile-page_display_name" title="Имя в чате" name="display_name" }}
                {{> InputField class="edit-profile-page__input" id="edit-profile-page_phone" title="Телефон" name="phone" type="tel" }}
            </div>
            <div class="profile-page__footer">
                {{> Button class="edit-profile-page__button" id="change_profile_button" value="Сохранить" page="/profile" }}
                {{> Link class="profile-page__link" value="Назад к чатам" page="/chats" }}
            </div>
        </div>
    </form>
</section>
